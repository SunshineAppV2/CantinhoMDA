{
  "version": 2,
  "buildCommand": "( [ -d cantinhomda-web ] && cd cantinhomda-web || [ -d cantinhomda ] && cd cantinhomda || true ) && npm install && npm run build",
  "outputDirectory": "cantinhomda-web/dist",
  "framework": "vite",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}